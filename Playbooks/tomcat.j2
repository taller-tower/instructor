[Unit]
Description=Apache Tomcat Server
After=syslog.target network.target

[Service]
Type=forking
User=tomcat
Group=tomcat

Environment=CATALINA_PID=/usr/local/apache-tomcat-9.0.34/temp/tomcat.pid
Environment=CATALINA_HOME=/usr/local/apache-tomcat-9.0.34
Environment=CATALINA_BASE=/usr/local/apache-tomcat-9.0.34

ExecStart=/usr/local/apache-tomcat-9.0.34/bin/catalina.sh start
ExecStop=/usr/local/apache-tomcat-9.0.34/bin/catalina.sh stop

RestartSec=10
Restart=always
[Install]
WantedBy=multi-user.target
